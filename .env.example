# ==============================================================================
# 데이터베이스 설정 (PostgreSQL with pgvector)
# ==============================================================================
DB_HOST=localhost
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=1234
DB_PORT=5432

# ==============================================================================
# Google Gemini API Key (임베딩 및 카테고리 분류용 - 필수)
# ==============================================================================
GOOGLE_API_KEY=YOUR_GOOGLE_API_KEY_HERE

# ==============================================================================
# LLM Provider 설정 (채팅용 - 하나를 선택)
# ==============================================================================

# 옵션 1: Google Gemini (기본값 - 권장)
LLM_PROVIDER=gemini
LLM_MODEL=gemini-2.5-flash-lite

# 옵션 2: OpenAI GPT-4o
# LLM_PROVIDER=openai
# LLM_MODEL=gpt-4o
# OPENAI_API_KEY=sk-proj-...

# 옵션 3: Anthropic Claude 3.5 Sonnet
# LLM_PROVIDER=claude
# LLM_MODEL=claude-3-5-sonnet-20241022
# ANTHROPIC_API_KEY=sk-ant-...

# 옵션 4: xAI Grok
# LLM_PROVIDER=xai
# LLM_MODEL=grok-beta
# XAI_API_KEY=xai-...

# ==============================================================================
# 추가 API Keys (선택사항 - 다중 Provider 지원을 위해)
# ==============================================================================
# OPENAI_API_KEY=sk-proj-...
# ANTHROPIC_API_KEY=sk-ant-...
# XAI_API_KEY=xai-...

# ==============================================================================
# 애플리케이션 설정
# ==============================================================================
UPLOAD_DIR=docs
CHUNK_SIZE=1000
CHUNK_OVERLAP=200